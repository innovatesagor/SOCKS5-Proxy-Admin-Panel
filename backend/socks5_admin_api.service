[Unit]
Description=SOCKS5 Admin Panel API
After=network.target

[Service]
User=flask_api_user
Group=flask_api_user
WorkingDirectory=/opt/socks5_admin/backend
Environment="PATH=/opt/socks5_admin/backend/venv/bin"
Environment="ADMIN_USERNAME=admin"
Environment="ADMIN_PASSWORD=your_secure_password_here"
Environment="JWT_SECRET_KEY=your_jwt_secret_key_here"
ExecStart=/opt/socks5_admin/backend/venv/bin/gunicorn -w 4 -b 127.0.0.1:5001 app:app

[Install]
WantedBy=multi-user.target
